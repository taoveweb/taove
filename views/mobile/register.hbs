{{#extend "mStyle"}}

    <style>
        html {
            height: 100%;
        }

        body {
            padding: 0;
            margin: 0;
            overflow-x: hidden;
            background-color: #1da1f2;
            height: 100%;
        }

        body {
            font-size: 0.3rem;
        }

        .wrap {
            height: 100%;
        }

        .content {
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            z-index: 10;

        }

        .login {
            margin: 2rem 7% 0;
            position: relative;

        }

        .login .br {
            margin-bottom: 0.3rem;
            color: #fff;
            position: relative;
        }

        .login input {
            display: block;
            width: 100%;
            border: none;
            background: rgba(255, 255, 255, 0.1);
            height: 0.4rem;
            line-height: 0.4rem;
            color: #fff;
            padding: 0.5rem 0.2rem;
            box-sizing: border-box;
            -webkit-border-radius: 0.2rem;
            -moz-border-radius: 0.2rem;
            border-radius: 0.2rem;
        }

        .login ::-webkit-input-placeholder {
            color: #fff;
        }

        .login button {
            width: 100%;
            height: 1rem;
            -webkit-border-radius: 0.2rem;
            -moz-border-radius: 0.2rem;
            border-radius: 0.2rem;
            background: rgba(255, 255, 255, 0.01);
            border: none;
            font-size: 0.4rem;
            color: #fff;
            border: 1px solid #fff;
        }

        .login button:focus,
        .login button:hover {
            font-size: 0.4rem;
        }

        .login .disable,
        .login .disable:active {
            background: rgba(255, 255, 255, 0.01);
            opacity: 0.5;
            border: 1px solid #fff;
        }

        .login button:active {
            background: #1d65ab;
            border: none;
            color: #fff;
            font-size: 1.2rem;
            font-size: 0.4rem;
        }

        input:-webkit-autofill {
            background: #1d84ce;
            color: #fff;
        }

        .other-login span {
            color: #fff;
        }

        .other-login h3 {
            width: 60%;
            margin: 0 auto;
            border-bottom: 1px solid #fff;
            color: #fff;
            height: 0.2rem;
            text-align: center;
        }

        .other-login h3 span {
            background: #1da1f2;

        }

        .list span {
            display: inline-block;
            width: 1rem;
            height: 1rem;

        }

        * {
            moz-user-select: -moz-none;
            -moz-user-select: none;
            -o-user-select: none;
            -khtml-user-select: none;
            -webkit-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        .wx:focus,
        .wx:hover {
            opacity: 0.8;
        }

        .f-link {
            position: absolute;
            right: 0;
        }

        .login p {
            padding-top: 0.1rem;
        }

        .circle {
            display: none;
            position: absolute;
            left: 50%;
            top: 0.2rem;
            box-sizing: border-box;
            width: 0.7rem;
            margin-left: -0.35rem;
            height: 0.7rem;
            border-radius: 100%;
            border: 10px solid rgba(255, 255, 255, 0.2);
            border-top-color: #FFF;
            -webkit-animation: spin 1s infinite linear;
            animation: spin 1s infinite linear;
        }

        @-webkit-keyframes spin {
            100% {
                -webkit-transform: rotate(360deg);
                transform: rotate(360deg);
            }
        }

        @keyframes spin {
            100% {
                -webkit-transform: rotate(360deg);
                transform: rotate(360deg);
            }
        }

        input {
            -webkit-user-select: auto !important;
        }

        .hasuser {
            position: fixed;
            left: 0rem;
            bottom: 0rem;
            width: 100%;
            text-align: center;
            color: #DBDBDB;
            z-index: 10;
        }

        .hasuser p {
            text-align: center;
            line-height: 0.8rem;
            height: 0.8rem;
        }

        .hasuser p a {
            color: #DBDBDB;
        }

        .back {
            heigit: 1.1rem;
            background: rgba(255, 255, 255, 0.1);
            border-top: 1px solid #fff;
            text-align: center;
            line-height: 1.1rem;
        }

        .validate-msg {
            height: 0.6rem;
            line-height: 0.6rem;
            text-align: center;
        }

        .login h2 {
            color: #fff;
            font-size: 0.5rem;
            text-align: center;
            line-height: 2rem;
            font-weight: normal;
        }
    </style>
{{/extend}}
<div class="wrap">
    <div class="content">

        <div class="login">
            <h2>手机号注册</h2>

            <div class="br">
                <input id="phone" type="tel" placeholder="手机号"/>
            </div>
            <div class="br">
                <button class="disable" id="login">继续</button>
                <p class="validate-msg"></p>

                <div class="circle"></div>
            </div>
        </div>
    </div>
    <div class="hasuser">
        <p>注册即表明你同意 桃微 的条款和 <a href="">隐私权政策</a></p>

        <div class="back">已经有账户了？登录。</div>
    </div>
</div>

{{#extend "mScripts"}}
    <script>
        (function (w) {
            w.validate = {
                phone: function (str) {
                    return /^1[3|4|5|7|8][0-9]\d{8}$/.test($.trim(str));
                },
                realName: function (str) {
                    return /^[\u4e00-\u9fa5]{1,5}$/.test($.trim(str));
                },
                email: function (str) {
                    return /(^\w+([-+.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$)/.test($.trim(str));
                },
                fromTime: function (str) {
                    return /^(20)[0,1][0,1,2,3,4,5,6][0-9]{2}\d{2}$/.test($.trim(str));
                },
                singed: function (str) {
                    return /^[\u4e00-\u9fa5]{0,20}/.test($.trim(str));
                },
                city: function (str) {
                    return /^[\u4e00-\u9fa5]{2,10}$/.test($.trim(str));
                },
                title: function (str) {
                    return /^([\u4e00-\u9fa5]|\d){1,10}$/.test($.trim(str))
                },
                description: function (str) {
                    return /^([\u4E00-\u9FA5]|\w|（|）|\(|\)|"|'|\.|。|!|,|，|！|\d|\n|\r|、){1,500}$/.test($.trim(str.replace('', " ")));
                },
                password: function (str) {
                    return /^(\d|[A-Za-z]){6,10}$/.test($.trim(str))
                }

            }

        })(window);
    </script>
    <script>
        var selfW = '';
        var dis = true;
        var registerW = '';
        $('#phone').on('keyup', function () {
            if ($(this).val()) {
                dis = false;
                $('#login').removeClass('disable');

            } else {
                dis = true;
                $('#login').addClass('disable');
            }
        })

        $('#login').tap(function () {
            if ($(this).hasClass('disable')) {
                return;
            }
            var that = $('.login');
            postLogin(that, 'register')
        });


        //验证手机可用后再发送验证码并跳转到输入验正码页面
        function postLogin(that, s) {
            var parent = that;
            var phone_val = parent.find('#phone').val();
            var pass = true;
            if (!validate.phone(phone_val)) {
                parent.find('.validate-msg').html('手机格试不正确');
                pass = false;
            }

            if (pass) {
                $('#login').html('');
                $('.circle').css('display', 'block');
                $.ajax({
                    type: 'POST',
                    url: '{{static}}m/register',
                    data: {phone: phone_val, type: 'register_validate'},
                    timeout: 300,
                    cache: false,
                    success: function (data) {
                        if (data.ok == 1) {
                            $('.circle').css('display', 'none');
                            $('#login').html('继续');
                            $('.validate-msg').html('');
                                if (registerW) {
                                plus.webview.show(registerW, "slide-in-right");
                            } else {
                                waiting = plus.nativeUI.showWaiting();
                                registerW = plus.webview.create("{{static}}m/register?type=register_validate&phone=" + phone_val, "{{static}}m/register", {
                                            zindex: 2,
                                            top: '0',
                                            bottom: '0',
                                            background: '#1da1f2',
                                            'popGesture': 'hide'
                                        },
                                        "slide-in-right");
                                registerW.onloaded = function () {
                                    plus.webview.show(registerW, "slide-in-right");
                                    waiting && waiting.close();
                                    waiting = null;
                                }
                            }


                        } else {
                            $('#login').html('继续');
                            $('.circle').css('display', 'none');
                            $('.validate-msg').html(data.msg);
                        }
                    },
                    error: function (xhr, type) {
                        alert('Ajax error!')
                    }
                })
            }
        }
    </script>
    <script>
        //用到dcloud--------------------------------------

        if (window.plus) {
            plusReady();
        } else {
            document.addEventListener("plusready", plusReady, false);
        }


        function plusReady() {
            selfW = plus.webview.currentWebview();
            selfW.setStyle({background: '#1da1f2'});
            $('.back').tap(function () {
                $('input').trigger('blur');
                selfW.hide('auto');
            })
        }


    </script>
{{/extend}}