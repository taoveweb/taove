    <script>
        (function (w) {
            w.validate = {
                phone: function (str) {
                    return /^1[3|4|5|7|8][0-9]\d{8}$/.test($.trim(str));
                },
                realName: function (str) {
                    return /^[\u4e00-\u9fa5]{1,5}$/.test($.trim(str));
                },
                email: function (str) {
                    return /(^\w+([-+.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$)/.test($.trim(str));
                },
                fromTime: function (str) {
                    return /^(20)[0,1][0,1,2,3,4,5,6][0-9]{2}\d{2}$/.test($.trim(str));
                },
                singed: function (str) {
                    return /^[\u4e00-\u9fa5]{0,20}/.test($.trim(str));
                },
                city: function (str) {
                    return /^[\u4e00-\u9fa5]{2,10}$/.test($.trim(str));
                },
                title: function (str) {
                    return /^([\u4e00-\u9fa5]|\d){1,10}$/.test($.trim(str))
                },
                description: function (str) {
                    return /^([\u4E00-\u9FA5]|\w|（|）|\(|\)|"|'|\.|。|!|,|，|！|\d|\n|\r|、){1,500}$/.test($.trim(str.replace('', " ")));
                },
                password: function (str) {
                    return /^(\d|[A-Za-z]){6,10}$/.test($.trim(str))
                }

            }

        })(window);
    </script>
    <script>
        var selfW='';

        var dis=true;
        $('#phone').on('keyup',function(){
            if($(this).val()){
                dis=false;
                $('#login').removeClass('disable');

            }else{
                dis=true;
                $('#login').addClass('disable');
            }
        })

        $('#login').tap(function () {
            if($(this).hasClass('disable')){
                return;
            }
            var that = $('.login');
            postLogin(that, 'l')
        });

        function postLogin(that, s) {
            var parent = that;
            var phone_val = parent.find('#phone').val();
            var pass = true;
            if (!validate.phone(phone_val)) {
                parent.find('.validate-msg').html('手机格试不正确');
                pass = false;
            }

            if (pass) {
                $('#login').html('');
                $('.circle').css('display', 'block');
                $.post('{{static}}m/register', {phone: phone_val,type: 'register'}, function (data) {
                    if (data.ok == 1) {
                        $('.circle').css('display', 'none');
                        $('#login').html('可以注册');
                        $('.validate-msg').html('');
                     } else {
                        $('#login').html('继续');
                        $('.circle').css('display', 'none');
                        $('.validate-msg').html(data.msg);
                    }
                })
            }
        }
    </script>
